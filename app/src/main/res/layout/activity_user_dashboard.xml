<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondary"
    tools:context=".AdminPage">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/profiles"
        android:contentDescription="@string/todo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user_default"
        tools:ignore="ImageContrastCheck" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="204dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="100dp"
            android:layout_height="65dp"
            android:layout_marginTop="10dp"
            android:background="@color/image_btn"
            android:contentDescription="@string/org"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/org"
            tools:ignore="DuplicateSpeakableTextCheck" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/edu"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/education"
            tools:ignore="DuplicateSpeakableTextCheck" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@color/image_btn"
            android:contentDescription="@string/health"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/health"
            tools:ignore="DuplicateSpeakableTextCheck" />

        <ImageButton
            android:id="@+id/imgBtn_other"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@color/image_btn"
            android:contentDescription="@string/other"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/others"
            tools:ignore="DuplicateSpeakableTextCheck" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_org"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:text="@string/org"
        android:textColor="@color/major"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/tv_edu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="29dp"
        android:text="@string/edu"
        android:textColor="@color/major"
        app:layout_constraintStart_toEndOf="@+id/tv_org"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/tv_health"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="58dp"
        android:text="@string/health"
        android:textColor="@color/major"
        app:layout_constraintStart_toEndOf="@+id/tv_edu"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/tv_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:text="@string/other"
        android:textColor="@color/major"
        app:layout_constraintStart_toEndOf="@+id/tv_health"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:text="@string/cats"
        android:textColor="@color/major"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/view_add"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/curved_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_funds"
        android:layout_width="match_parent"
        android:layout_height="455dp"
        android:background="@color/major"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_add"
        tools:listitem="@layout/fund_list_item" />

    <TextView
        android:id="@+id/tv_Ongoing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="6dp"
        android:text="@string/onGoing"
        android:textColor="@color/secondary"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="@+id/view_add"
        app:layout_constraintTop_toTopOf="@+id/view_add" />

    <TextView
        android:id="@+id/txtHello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="36dp"
        android:text="@string/tvHello"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvMsg"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:text="@string/txtMsg"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtHello" />

    <View
        android:id="@+id/navBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/navbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/ibHome"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="7dp"
        android:background="@color/image_btn"
        app:layout_constraintStart_toStartOf="@+id/navBar"
        app:layout_constraintTop_toTopOf="@+id/navBar"
        app:srcCompat="@drawable/ic_baseline_home_24" />

    <ImageButton
        android:id="@+id/ibDonate"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="7dp"
        android:background="@color/image_btn"
        app:layout_constraintStart_toEndOf="@+id/ibHome"
        app:layout_constraintTop_toTopOf="@+id/navBar"
        app:srcCompat="@drawable/apply_fund" />

    <ImageButton
        android:id="@+id/ibFund"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="7dp"
        android:background="@color/image_btn"
        app:layout_constraintStart_toEndOf="@+id/ibDonate"
        app:layout_constraintTop_toTopOf="@+id/navBar"
        app:srcCompat="@drawable/give" />

    <ImageButton
        android:id="@+id/ibFeed"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="7dp"
        android:background="@color/image_btn"
        app:layout_constraintStart_toEndOf="@+id/ibFund"
        app:layout_constraintTop_toTopOf="@+id/navBar"
        app:srcCompat="@drawable/ic_baseline_newspaper_24" />

    <ImageButton
        android:id="@+id/ibBills"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="7dp"
        android:background="@color/image_btn"
        app:layout_constraintStart_toEndOf="@+id/ibFeed"
        app:layout_constraintTop_toTopOf="@+id/navBar"
        app:srcCompat="@drawable/ic_baseline_attach_money_24" />

</androidx.constraintlayout.widget.ConstraintLayout>