<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="330dp">

        <ImageView
            android:id="@+id/iv_bg_color_adminlist"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:srcCompat="@drawable/background_top" />

        <TextView
            android:id="@+id/tv_admin_list"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:text="Fund Reciever List"
            android:textAlignment="center"
            android:textColor="@color/major"
            android:textSize="@dimen/profile_header"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="100dp"
            app:srcCompat="@drawable/add_users" />

        <ImageView
            android:id="@+id/iv_verify_tick"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="190dp"
            android:layout_marginTop="230dp"
            app:srcCompat="@drawable/baseline_verified" />
    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/search_users"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/search_bg"
        android:drawableStart="@drawable/search"
        android:ems="10"
        android:hint="@string/New_user_list_searchbar_hint"
        android:inputType="textPersonName"
        android:paddingStart="20dp"
        android:textColor="@color/black"
        android:textSize="@dimen/profile_searchbar" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/uset01"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_user01"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/account_circle_24" />

                <TextView
                    android:id="@+id/tv_user1_name"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingStart="20dp"
                    android:paddingTop="30dp"
                    android:text="@string/New_user_list_user1_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/profile_text" />

                <EditText
                    android:id="@+id/edt_user_date"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="@string/New_userlist_user1_date"
                    android:textColor="@color/black"
                    android:textSize="@dimen/profile_text" />

                <ImageView
                    android:id="@+id/iv_verify_u1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/baseline_edit_24" />

                <ImageView
                    android:id="@+id/iv_delete_u1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/baseline_delete" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/user02"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="110dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_user02"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/account_circle_24" />

                <TextView
                    android:id="@+id/tv_user2_name"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingStart="20dp"
                    android:paddingTop="30dp"
                    android:text="@string/New_user_list_user2_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/profile_text" />

                <EditText
                    android:id="@+id/edt_user2_date"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="@string/New_userlist_user2_date"
                    android:textColor="@color/black"
                    android:textSize="@dimen/profile_text" />

                <ImageView
                    android:id="@+id/iv_approve_u2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/baseline_edit_24" />

                <ImageView
                    android:id="@+id/iv_delete_u2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/baseline_delete" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</LinearLayout>