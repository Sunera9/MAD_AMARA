<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tv_eligibility_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/form_bg_top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_eligibleCheck_form"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text="@string/tv_eligibleCheck_form"
            android:textAlignment="center"
            android:textColor="@color/major"
            android:textSize="@dimen/application_form_heading"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_eligible_form"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="3dp"
            android:text="@string/application_form_subHead"
            android:textAlignment="center"
            android:textColor="@color/major"
            android:textSize="@dimen/application_form_subtext" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="710dp"
        android:layout_marginBottom="66dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="710dp"
            app:cardBackgroundColor="@color/white">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="20dp"
                android:paddingStart="10dp"
                android:text="@string/application_form_tvName"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edit_FirstName"
                    android:layout_width="214dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="#E2DFEF"
                    android:ems="10"
                    android:hint="@string/application_form_tv_firstName_hint"
                    android:inputType="textPersonName"
                    android:paddingStart="10dp" />

                <EditText
                    android:id="@+id/edit_LastName"
                    android:layout_width="280dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="2"
                    android:background="#E2DFEF"
                    android:ems="10"
                    android:hint="Last Name"
                    android:inputType="textPersonName"
                    android:paddingStart="10dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="90dp"
                android:layout_marginEnd="20dp"
                android:paddingStart="10dp"
                android:text="@string/eligible_form_tvAddress"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_postal_address"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="120dp"
                android:layout_marginEnd="20dp"
                android:background="#E2DFEF"
                android:ems="10"
                android:hint="@string/application_form_tv_address_hint"
                android:inputType="textPostalAddress"
                android:paddingStart="20dp"
                android:textColor="@color/black"
                android:textSize="@dimen/applicatin_form_fill_text" />

            <TextView
                android:id="@+id/tv_contact_no"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="170dp"
                android:layout_marginEnd="20dp"
                android:paddingStart="10dp"
                android:text="@string/application_eligible_tc_contact"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_mobile_no"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="200dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="#E2DFEF"
                android:ems="10"
                android:hint="@string/application_form_tv_mobileNo_hint"
                android:inputType="phone"
                android:paddingStart="20dp"
                android:textColor="@color/black"
                android:textSize="@dimen/applicatin_form_fill_text" />

            <TextView
                android:id="@+id/tv_familyDetails"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="250dp"
                android:layout_marginEnd="20dp"
                android:paddingStart="10dp"
                android:text="@string/application_form_tvFamDetails"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="175dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="280dp"
                android:layout_marginEnd="20dp">

                <Spinner
                    android:id="@+id/family_members"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="10dp"
                    android:entries="@array/familyMembers_options"
                    android:paddingStart="20dp"
                    android:spinnerMode="dropdown" />

                <TextView
                    android:id="@+id/tv_family_details"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginTop="70dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:paddingStart="5dp"
                    android:text="@string/application_eform_upload"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/butn5_upload"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="120dp"
                    android:layout_marginEnd="50dp"
                    android:background="@drawable/btn_bg"
                    android:text="UPLOAD DOCUMENT" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="145dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="460dp"
                android:layout_marginEnd="20dp">

                <TextView
                    android:id="@+id/tv_month_income"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingStart="10dp"
                    android:text="Monthly Income Details"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="40dp"
                    android:text="Upload Document of your Total Monthly Income of the Family "
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btnupload1"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="92dp"
                    android:layout_marginEnd="50dp"
                    android:background="@drawable/btn_bg"
                    android:text="Upload Document" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btn_submit_user_eligible"
                    android:layout_width="170dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="640dp"
                    android:background="@drawable/btn_submit"
                    android:text="SUBMIT"
                    android:textColor="@color/major"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/buttonCancel"
                    android:layout_width="170dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="640dp"
                    android:background="@drawable/btn_cancel"
                    android:text="CANCEL"
                    android:textColor="@color/major"
                    android:textStyle="bold" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>