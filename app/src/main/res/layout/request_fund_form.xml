<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_top"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_request_form"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:text="@string/request_form_header"
        android:textAlignment="center"
        android:textColor="@color/major"
        android:textSize="@dimen/application_form_heading"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#FFFFFF">

        <TextView
            android:id="@+id/tv_fullName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:text="@string/request_form_fullName"
            android:textColor="@color/black"
            android:textSize="@dimen/request_form_text_title"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_firstName"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="10dp"
            android:background="#E2DFEF"
            android:ems="10"
            android:hint="@string/request_form_firstName_hint"
            android:inputType="textPersonName"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/request_form_normal" />

        <EditText
            android:id="@+id/edt_lastName"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="210dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="20dp"
            android:background="#E2DFEF"
            android:ems="10"
            android:hint="@string/request_form_lastName_hint"
            android:inputType="textPersonName"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:textSize="@dimen/request_form_normal" />

        <TextView
            android:id="@+id/tv_mobileNo"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="20dp"
            android:text="@string/request_form_contact_no"
            android:textColor="@color/black"
            android:textSize="@dimen/request_form_text_title"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_phone_no"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="20dp"
            android:background="#E2DFEF"
            android:ems="10"
            android:hint="@string/request_form_mobile_hint"
            android:inputType="phone"
            android:paddingStart="15dp"
            android:textColor="@color/black"
            android:textSize="@dimen/request_form_normal" />

        <TextView
            android:id="@+id/tv_request_reason"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="280dp"
            android:layout_marginEnd="20dp"
            android:text="@string/request_form_reason"
            android:textColor="@color/black"
            android:textSize="@dimen/request_form_text_title"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/request_Reason_type"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="330dp"
            android:layout_marginEnd="20dp"
            android:entries="@array/Request_Reason"
            android:paddingStart="10dp"
            android:spinnerMode="dropdown"
            android:splitMotionEvents="false" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="400dp"
            android:layout_marginEnd="20dp"
            android:paddingStart="10dp"
            android:text="@string/request_form_description"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="@dimen/request_form_normal" />

        <Button
            android:id="@+id/btn_submit_request"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginStart="230dp"
            android:layout_marginTop="600dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/btn_submit"
            android:text="@string/request_form_btn_submit"
            android:textColor="@color/major"
            android:textSize="@dimen/btn_submit_text"
            android:textStyle="bold"
            app:cornerRadius="10dp" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="600dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/btn_cancel"
            android:text="@string/request_form_btn_cancel"
            android:textColor="@color/major"
            android:textSize="@dimen/btn_delete_text"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_upload"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="460dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/btn_bg"
            android:text="UPLOAD DOCUMENT" />
    </androidx.cardview.widget.CardView>
</LinearLayout>